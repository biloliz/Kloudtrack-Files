#include <Arduino.h>
#include <WiFi.h>
#include <Wire.h>
#include <Adafruit_SHT31.h>
#include <SD.h>
#include <SPI.h>
#include <time.h>

// Wi-Fi credentials
const char* ssid     = "KT_TPLink";
const char* password = "J@yGsumm!t";

// SD card SPI pin config
#define SD_CS     13
#define SD_MOSI   15
#define SD_MISO   2
#define SD_SCK    14

SPIClass spi = SPIClass(VSPI);  

// I2C multiplexer address
#define TCA_ADDR 0x70

// Create SHT31 instances
Adafruit_SHT31 sht[3];  
bool shtReady[3] = {false, false, false};

// I2C multiplexer channels for the SHT sensors
const uint8_t tcaChannels[3] = {2, 3, 4};

// NTP time settings
const char* ntpServer = "129.6.15.28";
const long  gmtOffset_sec = 8 * 3600;
const int   daylightOffset_sec = 0;

char timeString[25];  

void tcaSelect(uint8_t channel) {
  if (channel > 7) return;
  Wire.beginTransmission(TCA_ADDR);
  Wire.write(1 << channel);
  Wire.endTransmission();
  delay(100);  
}

void setup() {
  Serial.begin(115200);
  delay(1000);

  Wire.begin(21, 22);  

  // WiFi connection
  Serial.print("Connecting to WiFi...");
  WiFi.begin(ssid, password);
  int wifiRetries = 0;
  while (WiFi.status() != WL_CONNECTED && wifiRetries++ < 20) {
    delay(500);
    Serial.print(".");
  }
  Serial.println(WiFi.status() == WL_CONNECTED ? " âœ… Connected!" : " âŒ Failed to connect to WiFi.");

  // NTP time sync
  configTime(gmtOffset_sec, daylightOffset_sec, ntpServer);
  struct tm timeinfo;
  int ntpRetries = 0;
  while (!getLocalTime(&timeinfo) && ntpRetries++ < 10) {
    Serial.println("â³ Waiting for NTP time...");
    delay(1000);
  }
  Serial.println(getLocalTime(&timeinfo) ? "âœ… Time synchronized." : "âŒ Failed to synchronize time.");

  // Initialize SHT sensors
  Serial.println("ðŸ”Œ Initializing SHT sensors via multiplexer...");
  for (int i = 0; i < 3; i++) {
    tcaSelect(tcaChannels[i]);
    if (sht[i].begin(0x44)) {
      shtReady[i] = true;
      Serial.printf("âœ… SHT #%d initialized on TCA channel %d\n", i + 1, tcaChannels[i]);
    } else {
      Serial.printf("âŒ SHT #%d NOT found on TCA channel %d\n", i + 1, tcaChannels[i]);
    }
  }

  // Init SD card
  Serial.println("ðŸ”Œ Initializing SD card...");
  spi.begin(SD_SCK, SD_MISO, SD_MOSI, SD_CS);
  if (!SD.begin(SD_CS, spi)) {
    Serial.println("âŒ SD card initialization failed!");
  } else {
    Serial.println("âœ… SD card initialized.");
    if (!SD.exists("/shtcalib.csv")) {
      File file = SD.open("/shtcalib.csv", FILE_WRITE);
      if (file) {
        file.print("DateTime,");
        for (int i = 1; i <= 3; i++) {
          file.print("sht" + String(i) + "_Humidity,");
          file.print("sht" + String(i) + "_Temperature");
          if (i < 3) file.print(",");
        }
        file.println();
        file.close();
        Serial.println("ðŸ“„ Header written to shtcalib.csv");
      }
    }
  }
}

void loop() {
  struct tm timeinfo;
  if (getLocalTime(&timeinfo)) {
    strftime(timeString, sizeof(timeString), "%Y-%m-%d %H:%M:%S", &timeinfo);
  } else {
    strcpy(timeString, "1970-01-01 00:00:00");
    Serial.println("âš ï¸ Time not available.");s
  }

  Serial.printf("ðŸ•’ Timestamp: %s\n", timeString);
  Serial.println("ðŸ” Logging SHT data...");

  float humidity[3] = {NAN, NAN, NAN};
  float temperature[3] = {NAN, NAN, NAN};

  for (int i = 0; i < 3; i++) {
    tcaSelect(tcaChannels[i]);
    if (shtReady[i]) {
      temperature[i] = sht[i].readTemperature();
      humidity[i] = sht[i].readHumidity();
      Serial.printf("âœ… SHT%d (TCA channel %d) - H: %.2f%%, T: %.2fÂ°C\n",
                    i + 1, tcaChannels[i], humidity[i], temperature[i]);
    } else {
      Serial.printf("âŒ SHT%d not ready (NAN values used).\n", i + 1);
    }
  }

  // Log to CSV
  File file = SD.open("/shtcalib.csv", FILE_APPEND);
  if (file) {
    file.print(timeString);
    file.print(",");
    for (int i = 0; i < 3; i++) {
      file.printf("%.2f,%.2f", humidity[i], temperature[i]);
      if (i < 2) file.print(",");
    }
    file.println();
    file.close();
    Serial.println("ðŸ’¾ Data logged to SD card.");
  } else {
    Serial.println("âŒ Failed to open log file.");
  }

  delay(60000);  
}
